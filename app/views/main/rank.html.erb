		<p> no record yet </p>
	<%else%>
	<table>
	<tr>
	<td class="rankcontent"><p><font class="username"><%= first.username %> </font><%= first.carname %></p></td>
	<td><p><%= first.record %>"</p></td>
	</tr>
	</table>
	<% end%>
</div>
<div class="redcar"  id="redcar_fast"></div>

<div class="secondbox" id="fastsecond">
